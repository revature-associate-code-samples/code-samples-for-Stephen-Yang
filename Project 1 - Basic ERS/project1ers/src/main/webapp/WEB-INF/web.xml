<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>BasicHomeC</servlet-name>
  	<display-name>Basic Home Controller</display-name>
  	<description></description>
  	<servlet-class>com.revature.controllers.BasicHomeC</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmpController</servlet-name>
  	<display-name>EmpController</display-name>
  	<description></description>
  	<servlet-class>com.revature.controllers.EmpController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutC</servlet-name>
  	<display-name>LogoutC</display-name>
  	<description>logs out</description>
  	<servlet-class>com.revature.controllers.LogoutC</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RequestC</servlet-name>
  	<display-name>RequestC</display-name>
  	<description>makes new request</description>
  	<servlet-class>com.revature.controllers.RequestC</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ViewC</servlet-name>
  	<display-name>ViewC</display-name>
  	<description>views requests</description>
  	<servlet-class>com.revature.controllers.ViewC</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>BasicHomeC</servlet-name>
  	<url-pattern>/emp-home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EmpController</servlet-name>
  	<url-pattern>/emp-btn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutC</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RequestC</servlet-name>
  	<url-pattern>/new-req</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ViewC</servlet-name>
  	<url-pattern>/view</url-pattern>
  </servlet-mapping>
</web-app>
